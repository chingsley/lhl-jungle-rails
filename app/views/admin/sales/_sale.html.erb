<tr>
  <td>
    <h4><%= sale.name %></h4>
  </td>
  <td>
    <p><%= sale.starts_on %></p>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %>
    <span class="label label-danger">Finished</span>
    <% end %>    
    <% if sale.upcoming? %>
    <span class="label label-warning">Upcoming</span>
    <% end %>
    <% if sale.active? %>
    <span class="label label-success">Active</span>
    <% end %>
  </td>
  <td>
    <%= sale.percent_off %>
  </td>
</tr>